<Window x:Class="Loadbalancer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loadbalancer Thomas van Kleef" Height="375" Width="370" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,3.4,-0.2">
        <Button x:Name="startbtn" Content="Start" HorizontalAlignment="Left" Height="39" Margin="0,30,0,0" VerticalAlignment="Top" Width="169" Foreground="Black" Click="startbtn_click"></Button>
        <Button x:Name="stopbtn" Content="Stop" HorizontalAlignment="Left" Height="39" Margin="174,30,0,0" VerticalAlignment="Top" Width="169" Foreground="Black" RenderTransformOrigin="0.5,0.5" Click="stopbtn_click"></Button>
        <ListBox x:Name="notifier" HorizontalAlignment="Left" Height="250" Margin="0,74,0,0" VerticalAlignment="Top" Width="343" Opacity="0.5" BorderBrush="Black"></ListBox>
        <TextBox x:Name="portinput" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" ToolTip="Portnumber" Text="8080" Margin="45,0,0,0" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="portlabel" Content="Port#" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="25" FontFamily="Tahoma"/>
        <Button x:Name="runningserversbtn" Content="Running Servers" HorizontalAlignment="Left" Height="25" Margin="174,0,0,0" VerticalAlignment="Top" Width="169" Click="runningserversbtn_click"/>
    </Grid>
</Window>